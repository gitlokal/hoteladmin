<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="hoteladmin.Reservations" table="RESERVATIONS">
     <id name="id">
        <generator class="increment" />
    </id>
    <property name="res_from"  column="RES_FROM" type="timestamp" />
    <property name="res_to" column="RES_TO" type="timestamp"/>
    <property name="room_nr" column="ROOM_NR" type="integer"/>
    <property name="services" column="SERVICES" type="string"/>
    <property name="bill" column="BILL" type="float"/>
    <property name="guest" column="GUEST" type="integer"/>
  
    </class>
</hibernate-mapping>